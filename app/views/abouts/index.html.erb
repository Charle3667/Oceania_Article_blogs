<p style="color: green"><%= notice %></p>

<div id="abouts">
  <% @abouts.each do |about| %>
    <% if about.user_id == current_user.id %>
      <div class="card text-white bg-dark">
        <h4 class="card-header"><%= about.first_name %> <%= about.last_name %> </h4>
        <div class="card-body">
          <h5 class="card-title"><%= about.summary %></h5>
          <p class="card-text"><%= about.first_name %> <%= about.last_name %> | <%= about.profession %></p>
          <%= link_to "Edit", edit_about_path(about), class:'btn btn-secondary' %>
        </div>
        </div>
        <br>
      <div>
        <%= link_to "Home", root_path, class:'btn btn-primary' %>
      </div>
    <% end %>
  <%end%>
</div>


<% account_exists = false %>
<% @abouts.each do |about| %>
    <% if about.user_id == current_user.id %>
      <% account_exists = true %>
    <% end %>
  <%end%>
<% if account_exists == false %>
    <%= link_to "Create your about page", new_about_path %>
<% end %>

